<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="4dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:textAppearance="@style/TextAppearance.Nav.Title"
        android:text="Create a bucket"
        android:id="@+id/bucket_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.rengwuxian.materialedittext.MaterialEditText
        app:met_baseColor="@color/colorPrimary"
        app:met_primaryColor="@color/colorAccent"
        app:met_minCharacters="0"
        android:hint="Name"
        app:met_errorColor="@color/colorPrimaryDark"
        android:id="@+id/et_name"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginRight="16dp"
        app:met_floatingLabel="highlight"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/et_description"
        app:met_baseColor="@color/colorPrimary"
        app:met_primaryColor="@color/colorAccent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="Description"
        app:met_floatingLabel="highlight"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>
    <RelativeLayout
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorPrimary"
            android:text="OK"
            android:id="@+id/bucket_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="NO"
            android:textColor="@color/grey20_color"
            android:id="@+id/bucket_negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/bucket_positive" />
    </RelativeLayout>
</LinearLayout>