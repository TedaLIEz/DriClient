<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:padding="@dimen/item_shots_divider_size"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/comment_avatar"
            android:layout_gravity="center_horizontal"
            tools:src="@drawable/avatar_default"
            android:layout_width="48dp"
            android:layout_height="48dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/comment_name"
            tools:text="Manus"
            android:textAppearance="@style/TextAppearance.Shots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.hustunique.jianguo.driclient.ui.widget.HTMLTextView
            android:id="@+id/comment_body"
            tools:text="uuuh!awesome


            "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/comment_time"
                tools:text="about 5 hours ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/comment_like"
                android:src="@drawable/ic_item_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/comment_like_count" />
            <TextView
                android:layout_alignParentEnd="true"
                tools:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/comment_like_count" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>