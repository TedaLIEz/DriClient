<resources>


    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <!-- Activity -->
    <style name="Base.Theme.DesignDemo.BaseActivity" parent="Base.Theme.DesignDemo">
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="Base.Theme.DesignDemo.Main" parent="Base.Theme.DesignDemo.BaseActivity"></style>

    <style name="Base.Theme.DesignDemo.Login" parent="Base.Theme.DesignDemo">
        <item name="android:windowBackground">@drawable/ll_dribbble_logo</item>
    </style>

    <style name="Button" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="Base.Theme.DesignDemo.Auth" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

    <style name="Base.Theme.DesignDemo.ShotInfo" parent="Base.Theme.DesignDemo.BaseActivity">

    </style>

    <style name="Base.Theme.DesignDemo.ShotBucket" parent="Base.Theme.DesignDemo.BaseActivity">

    </style>

    <style name="Base.Theme.DesignDemo.ImageDetail" parent="Base.Theme.DesignDemo.BaseActivity">
        <item name="android:statusBarColor">@android:color/black</item>
    </style>


    <style name="Base.ThemeDemo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Base.Theme.DesignDemo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Base.ThemeDemo.ShotInfo.PopupOverlay" parent="Base.Theme.DesignDemo.PopupOverlay">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="TextAppearance" parent="TextAppearance.AppCompat"></style>

    <style name="TextAppearance.Shots" />


    <style name="TextAppearance.Shots.Title" parent="TextAppearance.Shots">
        <item name="android:textSize">@dimen/text_profile_lv3</item>
    </style>

    <style name="TextAppearance.Shots.SubTitle" parent="TextAppearance.Shots">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Shots.Info" parent="TextAppearance.Shots">

    </style>

    <style name="Base.Theme.DesignDemo.BucketDetail" parent="Base.Theme.DesignDemo.BaseActivity">

    </style>

    <style name="TextAppearance.Footer" parent="TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>


    <style name="TextAppearance.Profile" parent="TextAppearance">

    </style>

    <style name="TextAppearance.Profile.Title" parent="TextAppearance.Profile">
        <item name="android:textColor">@color/fontColor</item>
    </style>

    <style name="TextAppearance.Shots.Item">
        <item name="android:textColor">@color/grey20_color</item>
        <item name="android:textSize">@dimen/text_size_lv1</item>
    </style>


    <style name="TextAppearance.Nav" parent="TextAppearance" />

    <style name="TextAppearance.Nav.SubTitle" parent="TextAppearance.Nav">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/title_regular</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextAppearance.Nav.Title" parent="TextAppearance.Nav">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/nav_title</item>
    </style>


    <style name="Shots.Item" parent="Base.Theme.DesignDemo">
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Shots.Item</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance">
        <item name="android:textSize">@dimen/toolbar_title</item>
    </style>


    <style name="CustomDialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Base.Theme.DesignDemo.ShotList" parent="Base.Theme.DesignDemo.BaseActivity"></style>

    <style name="Base.Theme.DesignDemo.LikeList" parent="Base.Theme.DesignDemo.BaseActivity"></style>


</resources>
